<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    tools:ignore="ExtraText"> <!-- Cor de fundo -->

    <!-- Placar -->
    <TextView
        android:id="@+id/tvPlacar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placar: X - 0 | O - 0"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"
        android:gravity="center"/>
    <Button
        android:id="@+id/btnResetScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resetar Placar"
        android:textSize="18sp"
        android:padding="12dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:textColor="@color/white">

    </Button>
    <!-- GridLayout para o jogo da velha -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:padding="8dp"
        android:background="@color/light_gray"> <!-- Cor de fundo do grid -->

        <!-- Células do jogo da velha -->
        <Button
            android:id="@+id/bt00"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:textSize="32sp"
            android:background="@drawable/button_background"
            android:textColor="@color/white"/> <!-- Cor do texto alterada para branco -->

        <!-- Repita para os outros botões (bt01, bt02, bt10, bt11, bt12, bt20, bt21, bt22) -->
        <Button
            android:id="@+id/bt01"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:textSize="32sp"
            android:background="@drawable/button_background"
            android:textColor="@color/white"/> <!-- Cor do texto alterada para branco -->

        <Button
            android:id="@+id/bt02"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:textSize="32sp"
            android:background="@drawable/button_background"
            android:textColor="@color/white"/> <!-- Cor do texto alterada para branco -->

        <Button
            android:id="@+id/bt10"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:textSize="32sp"
            android:background="@drawable/button_background"
            android:textColor="@color/white"/> <!-- Cor do texto alterada para branco -->

        <Button
            android:id="@+id/bt11"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:textSize="32sp"
            android:background="@drawable/button_background"
            android:textColor="@color/white"/> <!-- Cor do texto alterada para branco -->

        <Button
            android:id="@+id/bt12"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:textSize="32sp"
            android:background="@drawable/button_background"
            android:textColor="@color/white"/> <!-- Cor do texto alterada para branco -->

        <Button
            android:id="@+id/bt20"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:textSize="32sp"
            android:background="@drawable/button_background"
            android:textColor="@color/white"/> <!-- Cor do texto alterada para branco -->

        <Button
            android:id="@+id/bt21"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:textSize="32sp"
            android:background="@drawable/button_background"
            android:textColor="@color/white"/> <!-- Cor do texto alterada para branco -->

        <Button
            android:id="@+id/bt22"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:textSize="32sp"
            android:background="@drawable/button_background"
            android:textColor="@color/white"/> <!-- Cor do texto alterada para branco -->
    </GridLayout>

    <!-- Botão de Reset -->
    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reiniciar Jogo"
        android:textSize="18sp"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:textColor="@color/white"/>

</LinearLayout>